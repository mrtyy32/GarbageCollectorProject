	function clearKayit() {
		$('#vAciklama').val('');
		$('#baslamaDrop option')[0].selected = true;
		$('#bitirmeDrop option')[0].selected = true;

	}

	function getListe() {
		$.ajax({
			url: "/Araclar/GetAracHtml",
			success: (data) => {
				$("#tableBody").html(data);
			}
		});
	};

	function deleteArac() {
		var id = $(this)[0].getAttribute('data-id');
		$.ajax({
			url: "/Araclar/Delete/" + id,
			type: "POST",
			success: () => {
				getListe();
			}
		});
	};

	function dateConvert(dateJ) {
		var dateString = dateJ.substr(6);
		var currentTime = new Date(parseInt(dateString));
		var month = currentTime.getMonth() + 1;
		var day = currentTime.getDate();
		var year = currentTime.getFullYear();
		var date = day + "/" + month + "/" + year;
		return date;
	}

	function editDoldur(data) {
		getDropDownMarkaEdit();
		getDropDownModelEdit();
		getDropDownPersonelEdit();
		$("#peditId").val((data.AracID));
		$("#peditName").val((data.PersonelAd));
		$("#peditLastName").val((data.PersonelSoyad));
		$("#peditMaas").val((data.Maas));
		$("#editalinisTarihi").val(dateConvert(data.AlinisTarihi));
		$("#editbakimTarihi").val(dateConvert(data.BakimTarihi));
		$("#editmuayeneTarihi").val(dateConvert(data.MuayeneTarihi));
