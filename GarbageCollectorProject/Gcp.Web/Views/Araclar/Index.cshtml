		////	else {
		////		$("#txtAge").hide();
		////	}
		////});
		//$("#editamir").val((data.AmirMi));
	};

	function getArac(id) {

		$.ajax({
			url: "/Araclar/Edit/" + id,
			type: "GET",
			data: { id: id },
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: (data) => {
				editDoldur(data);
			}
		});
	};

	$("#saveBtn").click(() => {
			$.ajax({
				url: "/Araclar/Create",
				type: "POST",
				data: {
				PersonelID: $("#dropPersonel").val(),
				MarkaID: $("#dropMarka").val(),
				ModelID: $("#dropModel").val(),
				//AlinisTarihi: $("#dogumTarihi").val(),
				//BakimTarihi: $("#girisTarihi").val(),
				//MuayeneTarihi: $("#cikisTarihi").val(),
			},
			success: () => {
				getListe();
			}
		});
	});
	$("#updateBtn").click((id, data) => {

		$.ajax({
			url: "/Araclar/Edit/" + id + data,
			type: "POST",
			data: {
				PersonelID: $("#dropPersonel").val(),
				MarkaID: $("#dropMarka").val(),
