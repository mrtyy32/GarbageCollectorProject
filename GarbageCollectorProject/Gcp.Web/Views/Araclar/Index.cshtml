<script>
	getListe();

	getDropDownMarka();
	getDropDownPersonel();

	function clearKayit() {
		$('#dropPersonel').empty();
		$('#dropPersonelEdit').empty();
		$('#dropMarka').empty();
		$('#dropModel').empty();
		$('#dropModelEdit').empty();
		$('#dropMarkaEdit').empty();

	}

	function getListe() {
		$.ajax({
			url: "/Araclar/GetAraclarHtml",
			datatype: 'json',
			success: (data) => {
				$("#tableBody").html(data);
			}
		});
	};

	function deleteArac() {
		var id = $(this)[0].getAttribute('data-id');
		$.ajax({
			url: "/Araclar/Delete/" + id,
			type: "POST",
			success: () => {
				getListe();
			}
		});
	};

	function dateConvert(dateJ) {
		var dateString = dateJ.substr(6);
		var currentTime = new Date(parseInt(dateString));
		var month = currentTime.getMonth() + 1;
		var day = currentTime.getDate();
		var year = currentTime.getFullYear();
		var date = day + "/" + month + "/" + year;
		return date;
	}

	function editDoldur(data) {
		clearKayit();
		getDropDownMarkaEdit(data.MarkaID, data.ModelID);
		getDropDownModelEdit(data.ModelID);
		getDropDownPersonelEdit(data.PersonelID);
		$("#peditPlaka").val((data.AracPlaka));
		$("#peditId").val((data.AracID));
		if (data.AktifMi === true) {
			$("#editaktif").prop('checked', true);
			$("#editaktif").attr('checked', 'checked');
			$("#editaktif").checked = checked;
		}
		$("#editaktif").prop("checked", false);

	};

	function getArac(id) {
		$.ajax({
			url: "/Araclar/Edit/" + id,
			type: "GET",
			data: { id: id },
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: (data) => {
				editDoldur(data);
			}
		});
	};

	function getAracDetay(id) {
		$.ajax({
			url: "/Araclar/DetayDokumHtml",
			data: {aracId: id},
			success: (data) => {
				$("#tableDetay").html(data);
			}
		});
	};

	$("#saveBtn").click(() => {

		$.ajax({
			url: "/Araclar/Create",
			type: "POST",
			data: {
				AracPlaka: $("#pPlaka").val(),
				MarkaID: $("#dropMarka").val(),
				ModelID: $("#dropModel").val(),
				AktifMi: $("#aktif:checked").val()
			},
			success: () => {
				getListe();
			}
		});
	});
	
	$('#detayKayit').on('show.bs.modal', function (e) {
		var id = $(e.relatedTarget).data('book-id');
		$(e.currentTarget).find('input[id="aracId"]').val(id);
	});

	$("#savedetayBtn").click(() => {
		$.ajax({
			url: "/Araclar/DetayCreate",
			type: "POST",
			data: {
				AracID: $("#aracId").val(),
				AlinisTarihi: $("#alinisTarihi").val(),
				BakimTarihi: $("#bakimTarihi").val(),
				MuayeneTarihi: $("#muayeneTarihi").val()
			},
			success: () => {
				getListe();
			}
		});
	});

	$("#updateBtn").click((id, data) => {

		$.ajax({
			url: "/Araclar/Edit/" + id + data,
			type: "POST",
			data: {
				AracID: $('#peditId').val(),
				PersonelID: $("#dropPersonel").val(),
				MarkaID: $("#dropMarka").val(),
				ModelID: $("#dropModel").val(),
				AktifMi: $('#editaktif:checked').val()
			},
			success: () => {
				getListe();
			}
		});
	});

	//Dropdowns

	function getDropDownMarka() {
		var myDropDownList = $('#dropMarka');

		$.ajax({
			type: "GET",
			url: "/Marka/forDropDown",
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: function (data) {
				$.each((data),
					function () {
						myDropDownList.append($('<option></option>').val(this['MarkaID']).html(this['MarkaAd']));
					});
			},
			failure: function (response) {
				alert(response.d);
			}
		});
	};

	function getDropDownMarkaEdit(id, id2) {
		var myDropDownList = $('#dropMarkaEdit');
		myDropDownList.empty();
		$.ajax({
			type: "GET",
			url: "/Marka/forDropDown",
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: function (data) {
				$.each((data),
					function () {
						if (id == this.MarkaID) {
							myDropDownList.append($('<option selected="selected"></option>').val(this['MarkaID']).html(this['MarkaAd']).attr('selected', 'selected'));
						}
						myDropDownList.append($('<option></option>').val(this['MarkaID']).html(this['MarkaAd']));
					});
				getDropDownModelEdit(this.MarkaID, id2);
			},
			failure: function (response) {
				alert(response.d);
			}

		});
	}

	function getDropDownModelEdit(id, id2) {
		var myDropDownList = $('#dropModelEdit').empty();

		$.ajax({
			type: "GET",
			url: "/Model/forDropDown?markaId=" + id,
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: function (data) {
				$.each((data),
					function () {
						if (id2 == this.ModelID) {
							myDropDownList.append($('<option selected="selected"></option>').val(this['ModelID']).html(this['ModelAd']).attr('selected', 'selected'));
						}
						myDropDownList.append($('<option></option>').val(this['ModelID']).html(this['ModelAd']));
					});
			},
			failure: function (response) {
				alert(response.d);
			}
		});
	};

	$('#dropMarka').on('change', function () {
		$('#dropModel').empty();
		var markaId = $(this).val();
		getDropDownModel(markaId);
	});

	function getDropDownModel(id) {
		var myDropDownList = $('#dropModel');

		$.ajax({
			type: "GET",
			url: "/Model/forDropDown?markaID=" + id,
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: function (data) {
				$.each((data),
					function () {
						myDropDownList.append($('<option></option>').val(this['ModelID']).html(this['ModelAd']));
					});
			},
			failure: function (response) {
				alert(response.d);
			}
		});
	};

	function getDropDownPersonel() {
		var myDropDownList = $('#dropPersonel');

		$.ajax({
			type: "GET",
			url: "/Personel/forDropDown",
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: function (data) {
				$.each((data),
