
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_panelLayout.cshtml";
}
@section activehome{
	active open
}
<div class="row widget-row">
	<div class="col-md-3">
		<!-- BEGIN WIDGET THUMB -->
		<div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
			<h4 class="widget-thumb-heading">Aylık Personel Gideri</h4>
			<div class="widget-thumb-wrap">
				<i class="widget-thumb-icon bg-green fa fa-money"></i>
				<div class="widget-thumb-body">
					<span class="widget-thumb-subtitle">TL</span>
					<span id="countaylik" class="widget-thumb-body-stat" data-counter="counterup"></span>
				</div>
			</div>
		</div>
		<!-- END WIDGET THUMB -->
	</div>
	<div class="col-md-3">
		<!-- BEGIN WIDGET THUMB -->
		<div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
			<h4 class="widget-thumb-heading">Personel Sayısı</h4>
			<div class="widget-thumb-wrap">
				<i class="widget-thumb-icon bg-red icon-briefcase"></i>
				<div class="widget-thumb-body">
					<span class="widget-thumb-subtitle">Kişi</span>
					<span id="countpersonel" class="widget-thumb-body-stat" data-counter="counterup" ></span>
				</div>
			</div>
		</div>
		<!-- END WIDGET THUMB -->
	</div>
	<div class="col-md-3">
		<!-- BEGIN WIDGET THUMB -->
		<div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
			<h4 class="widget-thumb-heading">Araç Sayısı</h4>
			<div class="widget-thumb-wrap">
				<i class="widget-thumb-icon bg-purple icon-screen-desktop"></i>
				<div class="widget-thumb-body">
					<span class="widget-thumb-subtitle">Araç</span>
					<span id="countarac" class="widget-thumb-body-stat" data-counter="counterup"></span>
				</div>
			</div>
		</div>
		<!-- END WIDGET THUMB -->
	</div>
	<div class="col-md-3">
		<!-- BEGIN WIDGET THUMB -->
		<div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
			<h4 class="widget-thumb-heading">Firma Sayısı</h4>
			<div class="widget-thumb-wrap">
				<i class="widget-thumb-icon bg-blue icon-bar-chart"></i>
				<div class="widget-thumb-body">
					<span class="widget-thumb-subtitle">Firma</span>
					<span id="countfirma" class="widget-thumb-body-stat" data-counter="counterup"></span>
				</div>
			</div>
		</div>
		<!-- END WIDGET THUMB -->
	</div>
</div>
<script>
	personelCount();
	giderCount();
	firmaCount();
	aracCount();
	function personelCount() {
		$.ajax({
			url: "/Personel/Count",
			success: (data) => {
				$('#countpersonel').attr("data-value", data);
				//$('#countpersonel').html(data);
				return data;
			}
		});

	};
	function giderCount() {
		$.ajax({
			url: "/Personel/aylikGider",
			success: (data) => {
				$('#countaylik').attr("data-value", data);
				return data;
			}
		});

	};
	function firmaCount() {
		$.ajax({
			url: "/Kurumlar/Count",
			success: (data) => {
				$('#countfirma').attr("data-value", data);
				return data;
			}
		});

	};
	function aracCount() {
		$.ajax({
			url: "/Araclar/Count",
			success: (data) => {
				$('#countarac').attr("data-value", data);
				return data;
			}
		});

	};
</script>