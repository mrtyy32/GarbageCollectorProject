@model List<Gcp.Web.Models.Vardiya>
@{
    Layout = null;
}

@foreach (var v in Model)
{
	<tr role="row" class="odd" data-id="@v.VardiyaID">
		<th class="control"></th>
		<td>@v.VardiyaAd</td>
		<td>@v.BaslamaSaati</td>
		<td>@v.BitirmeSaati</td>
		<td>

			<a data-toggle="modal" data-target="#guncelleKayit" onclick="getVardiya(@v.VardiyaID)" class="btn btn-circle btn-icon-only btn-default">
				<i class="icon-pencil"></i>
			</a>
			<a data-toggle="confirmation" data-on-confirm="deleteVardiya" data-id="@v.VardiyaID" data-original-title="@v.VardiyaAd vardiyasını silmek istediğinize emin misiniz?" class="btn btn-circle btn-icon-only btn-default">
				<i class="icon-trash"></i>
			</a>
		</td>
	</tr>
}
<script>
    $('[data-toggle="confirmation"]').confirmation({
        singleton: true
		
    });
</script>